<RoundedButton1@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba:(3/255, 192/255, 193/255, 1) if self.state == 'normal' else (0, 127/255, 128/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [25]

<RoundedButton2@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba:(.957, .267, .18, 1) if self.state == 'normal' else (127/255, 30/255, 4/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [25]

<result>:
    canvas.before:
        Color:
            rgba: (31/255, 2/255, 31/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        padding: "5dp"

        Label:  
            text: root.choice
            font_size: 20 
            color: (253/255, 241/255, 41/255, 1)
            bold: True
            italic: True
            outline_color: (0,0,0)
            outline_width: 5

        RoundedButton1:
            text: "Close"
            color: (0,0,0,1)
            font_size: 20
            bold: True
            italic: True
            size_hint: 0.5, 0.3
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            on_release: root.parent.parent.parent.dismiss()


        